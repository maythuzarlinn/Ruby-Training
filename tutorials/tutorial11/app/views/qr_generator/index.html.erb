<div class="form">
  <h3>Enter user name to generate QR code</h3>
  <%= form_with(url: qr_generator_upload_path, local: true) do |f| %>
    <div class="input">
      <%= f.text_field :text, placeholder: "Eg. Mg Mg" %>
    </div>
    <span class="error"><%= @error %></span>
    <div class="input">
      <%= f.submit "Generate QR" %>
    </div>
  <% end %>
</div>
