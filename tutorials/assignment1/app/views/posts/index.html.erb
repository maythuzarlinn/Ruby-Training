<h3>Please enter create to create new post.</h3>
<div class="createbtn">
<%= link_to "Create new post", new_post_path %>
</div>
<h2>Posts Table</h2>
<table>
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Options</th>
  </thead>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.status %></td>
    <td>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
    </td>
  </tr>
  <% end %>
</table>

