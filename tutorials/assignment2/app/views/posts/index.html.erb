<h3>Please enter create to create new post.</h3>
<div class="createbtn">
<%= link_to "Create new post", new_post_path %>
</div>
<h2>Posts Table</h2>
<table>
  <thead>
    <th>title</th>
    <th>description</th>
    <th>status</th>
    <th>options</th>
  </thead>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.status %></td>
    <td>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
    </td>
  </tr>
  <% end %>
</table>
<h3>Export as csv.</h3>
<%= link_to "Download as csv", posts_path(format: "csv") %>
<h3>Import CSV for Post Table.</h3>
<%= form_tag import_posts_path, multipart: true do %>
 <%= file_field_tag :file %>
 <%= submit_tag "Click here to upload" %>
<% end %>


