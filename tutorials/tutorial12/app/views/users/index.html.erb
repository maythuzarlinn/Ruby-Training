<h2>Create and show users Data with table.</h2>
<div class="createbtn">
<%= link_to "Create user", new_user_path %>
</div>
<table>
  <thead>
    <th>Name</th>
    
    <th>Address</th>
    <th>Phone Number</th>
    <th>Operations</th>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
   
    <td><%= user.address %></td>
    <td><%= user.phone_number %></td>
    <td>
      <%= link_to "Update", edit_user_path(user) %>
      <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
    </td>
  </tr>
  <% end %>
</table>