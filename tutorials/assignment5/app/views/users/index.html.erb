<h1>Users and Posts</h1>
<div class="container">
  <div>
    <%= link_to "create user", new_user_path, class: "link" %>
    <%= link_to "Create Posts", posts_path, class: "link" %>
  </div>
</div>
<h2>Users Table</h2>
<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Phone number</th>
    <th>Operations</th>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.address %></td>
    <td><%= user.phone_number %></td>
    <td>
      <%= link_to "Edit", edit_user_path(user) %>
      <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
    </td>
  </tr>
  <% end %>
</table>
<br>
<h5>Current user Info</h5>
<p>Email = <%= current_user.email %></p>
<p>Name = <%= current_user.name %></p>
<%= form_with method: @user, url: users_path(email: params[:email]), local: "true" do |form| %>
<div class="button">
      <%= link_to "SendCurrentUserLogInInformation", send_mail_info_path %>
</div><br>
<div class="button">
      <%= link_to "SendPostList", send_mail_path %>
</div><br>
<br>
<button><%= link_to "Log out", root_path %></button>
<% end %>

