<h1>Posts Data</h1>
<div class="createbtn">
</div>
<table>
  <thead>
    <th>title</th>
    <th>description</th>
    <th>status</th>
    <th>options</th>
  </thead>
  <tbody>
   <%= render @posts %>
  </tbody>
</table>

<%= form_with(model: @post, id: "new_post", local: false) do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div>
  <%= f.label :status %>
  <%= f.radio_button :status, "1" %><label for="status_1">private</label>
  <%= f.radio_button :status, "0" %><label for="status_0">public</label>
</div>

 <%= f.number_field :user_id, id: :post_user_id, value: current_user.id, type: :hidden %>
<div>
  <%= f.submit %>
</div>
<% end %>





